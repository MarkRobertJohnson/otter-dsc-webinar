##AH:UseTextMode


# Loop
foreach $ModuleName in @PowershellModules
{
    PSEnsure
    (
        Key: DSC Module: $ModuleName,
        Value: True,
        CollectScript: Test-PowerShellModuleInstalled,
        ConfigureScript: Install-PowerShellModule,
        CollectScriptParams: %(
ModuleName: $ModuleName
),
        ConfigureScriptParams: %(
ModuleName: $ModuleName
)
    );
}
